<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <TextView
        android:background="#8d60a6cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This activity is just for the Android Auto app configuration, since entering long terms on the AA display can be distracting..." />

    <LinearLayout
        android:background="#8d60a6cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/url_to_car_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Set URL on car" />

        <android.support.v7.widget.AppCompatButton
            android:fontFamily="@font/materialdesigniconswebfont"
            app:font="@font/materialdesigniconswebfont"
            android:id="@+id/url_to_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="&#xF48A;" />

    </LinearLayout>

    <LinearLayout
        android:background="#8d60a6cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_to_car_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Send text to car" />

        <android.support.v7.widget.AppCompatButton
            android:fontFamily="@font/materialdesigniconswebfont"
            app:font="@font/materialdesigniconswebfont"
            android:id="@+id/text_to_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="&#xF48A;" />

    </LinearLayout>

    <LinearLayout
        android:background="#8df9b815"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/new_fav_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Title for new favorite"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/new_fav_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="URL for new favorite"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/new_fav_desktop_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desktop mode" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_favorite_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&#xF4CE;"
                android:fontFamily="@font/materialdesigniconswebfont"
                app:font="@font/materialdesigniconswebfont" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/fav_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/favorite_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>


</LinearLayout>
